{
  "name": "langevitour",
  "version": "0.5.1",
  "description": "",
  "main": "inst/htmlwidgets/langevitour.js",
  "sideEffects": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx webpack watch --mode=development",
    "sync-versions": "VERSION=$(grep '^Version:' DESCRIPTION | cut -d' ' -f2) && sed -i '/^  \\\"version\\\"/ c\\  \\\"version\\\": \\\"'$VERSION'\\\",' package.json && sed -i '/^   version:/ c\\   version: \\\"'$VERSION'\\\"' inst/htmlwidgets/langevitour.yaml",
    "js-build": "npx webpack",
    "js-docs": "npx typedoc src/langevitour.ts --out docs/jsdoc/ --excludeNotDocumented --readme none",
    "r-document": "R -e 'devtools::document()'",
    "r-docs": "npm run r-document && R -e 'pkgdown::build_site()'",
    "build": "npm run sync-versions && npm run js-build && npm run js-docs && npm run r-docs",
    "r-install": "R -e 'devtools::install()'",
    "r-install-quick": "R -e 'devtools::install(quick=T)'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfh/langevitour.git"
  },
  "author": "Paul Harrison",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pfh/langevitour/issues"
  },
  "homepage": "https://logarithmic.net/langevitour",
  "devDependencies": {
    "ts-loader": "^9.4.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "d3": "^7.6.1",
    "jstat": "^1.9.5",
    "svd-js": "^1.1.1"
  }
}
